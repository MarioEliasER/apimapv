@page
@model UbicaTec.Pages.Admin.EditarModel
@{
}
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/Css/StylesAdmin.css" />
	<link rel="icon" href="~/Images/Icono/Icono144.png" type="image/x-icon">
	<title>Editar</title>
</head>
<body class="grid-container">
	<header class="header">
		<div class="iconTitle">
			<a><img class="icon" src="~/Images/Diseños/Logo.png" alt="icon" /></a>
			<h1>Ubica-Tec</h1>
		</div>
		<a class="PrimeraVista"><img class="iconMenu" src="~/Images/Diseños/CerrarSesion.png" alt="filter icon" /></a>
	</header>

	<main class="main">
		<div class="Lista-Container3">
			<div class="title"><label>Editar</label></div>

			<div class="form-container">
				<div class="form-group">
					<label for="nombre">Nombre:</label>
					<input type="text" id="nombre" name="nombre" value="Edificio de Industrial" />
				</div>

				<div class="form-group">
					<label for="area">Área:</label>
					<select id="area" name="area">
					</select>
				</div>

				<div class="form-group">
					<label for="descripcion">Descripción:</label>
					<textarea id="descripcion" name="descripcion"></textarea>
				</div>

				<div class="form-group">
					<label for="imagen">Imagen:</label>
					<img id="imagen-preview-Edit" class="imagenEditar" src="~/Images/Diseños/Industrial.png" alt="Imagen predefinida" />
					<input type="file" id="imagen" name="imagen" accept="image/*" />
				</div>
			</div>

		</div>
		<div class="button-group">
			<a id="Aceptar" class="btn aceptar"><img src="~/Images/Diseños/Aceptar.png" alt="Aceptar Icono" /> </a>
			<a id="Cancelar" class="btn cancelar, Inicio"><img src="~/Images/Diseños/Cancelar.png" alt="Cancelar Icono" /> </a>
		</div>


	</main>

	<nav class="footer">
		<div class="nav-item">
			<a id="Inicio">
				<img src="~/Images/Diseños/casa.png" alt="home icon" />
				<h3>Inicio</h3>
			</a>
		</div>
	</nav>
	<script src="~/Scripts/Editar.js"></script>
	<script>
		//NAVEGACION
		let Home = document.getElementById('Inicio').addEventListener("click", function () {
			window.location.replace("Index");
		});
		// let Acept=document.getElementById('Aceptar').addEventListener("click", function(){
		// 	window.location.replace("Index");
		// });
		let Cancel=document.getElementById('Cancelar').addEventListener("click",function(){
			window.location.replace("Index");
		});
		let PrimeraVista= document.querySelector('.PrimeraVista').addEventListener("click", function(){
			window.location.replace("/Index");
		});
					document.getElementById('imagen').addEventListener('change', function(event) {
		  const file = event.target.files[0];
		  if (file) {
			const reader = new FileReader();
			reader.onload = function(e) {
			  document.getElementById('imagen-preview-Edit').src = e.target.result;
			};
			reader.readAsDataURL(file);
		  }
		});

	</script>
	<script src="https://kit.fontawesome.com/81581fb069.js" crossorigin="anonymous"></script>

</body>
</html>


